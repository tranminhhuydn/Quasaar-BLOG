<!DOCTYPE html>
<html lang="en">
<% include ../partials/header %>

    <body>
        <% include ../partials/nav %>

        <div class="container mt-5">
            <div class="row">
                <div class="col-md-8">
                    <h1 class="my-4">Düzenle #<%=post.id%></h1>

                    <% if(done) { %>
                        <div class="alert alert-success" role="alert">
                            Kayıt edildi!
                        </div>
                    <% } %>

                    <form action="/edit/<%=post.id%>" method="post">
                        <div class="form-group">
                            <label for="header">Başlık</label>
                            <input type="text" class="form-control" id="header" name="header" placeholder="Başlık" value="<%=post.header%>">
                            
                        </div>

                        <div class="form-group">
                            <label for="content">İçerik</label>
                            <textarea type="password" class="form-control" id="content" name="content" rows="15"><%=post.content%></textarea>
                        </div>
                        
                        <button type="submit" class="btn">Düzenle</button>
                       
                    </form>
                    <br>
                </div>
            </div>
        </div>
     
        
        <% include ../partials/footer %>

    </body>

</html>