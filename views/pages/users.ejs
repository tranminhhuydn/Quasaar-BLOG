<!DOCTYPE html>
<html lang="en">
<% include ../partials/header %>

    <body>
        <% include ../partials/nav %>

        <div class="container mt-5">
            <div class="row">
                <div class="col-md-8">
                    <h1 class="my-4">Kullanıcılar</h1>

                    <% if(done) { %>
                        <div class="alert alert-success" role="alert">
                            Değişiklik uygulandı!
                        </div>
                    <% } %>

                    <ul class="list-group">
                        <% for(let user of users) { %>
                            <li class="list-group-item">
                                <%=user.user%>

                                (<a href="/users/delete/<%=user.user%>">sil</a>)
                            </li>
                        <% } %>
                    </ul>
                          

                    <form action="/users" method="post" autocomplete="off">
                        <div class="form-group">
                            <label for="user">Kullanıcı</label>
                            <input type="text" class="form-control" id="user" name="user" placeholder="Kullanıcı adı">
                        </div>

                        <div class="form-group">
                            <label for="pass">Şifre</label>
                            <input type="password" class="form-control" id="pass" name="pass" placeholder="Password">
                        </div>
                    
                        <button type="submit" class="btn">Ekle</button>
                    </form>
                    <br>
                </div>
            </div>
        </div>
        
        <% include ../partials/footer %>
    </body>

</html>